<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3pt"
            android:paddingBottom="3pt"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView_headpic"
                android:layout_width="15pt"
                android:layout_height="15pt"
                android:layout_marginTop="6pt"
                android:src="@drawable/ic_launcher" />
            <TextView
                android:id="@+id/textView_bianliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#367EAA" />

            <TextView
                android:id="@+id/textView_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="8pt"
                android:gravity="bottom"
                android:text="TextView"
                android:textColor="#818095" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_tailpic"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginTop="9pt"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</LinearLayout>